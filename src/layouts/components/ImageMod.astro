---
import { getImageImport } from "@/lib/utils/imageUtils";
import { Image } from "astro:assets";

// Props interface for the component
interface Props {
  src: string;
  alt: string;
  width?: number | undefined;
  height?: number | undefined;
  loading?: "eager" | "lazy" | null | undefined;
  decoding?: "async" | "auto" | "sync" | null | undefined;
  format?: "auto" | "avif" | "jpeg" | "png" | "svg" | "webp";
  class?: string;
  style?: any;
}

// Destructuring Astro.props to get the component's props
let { src, alt, width, height, loading, decoding, class: className, format, style } = Astro.props;

const image = await getImageImport(src);

// Log a warning message in red if the image is not found
!image &&
  console.error(`\x1b[31mImage not found - ${src}.\x1b[0m Make sure the image is in the /public/images folder.`);

const maxDimension = 1600;
if(!width || !height) {
  // Calculate ideal width and height if not provided.
  if(image?.width && image?.height) {
    // Scale down large images for better performance
    if(image.width > maxDimension || image.height > maxDimension) {
      const scaleRatio = Math.max(image.width / maxDimension, image.height / maxDimension);
      width = Math.round(image.width / scaleRatio);
      height = Math.round(image.height / scaleRatio);
    }
    else {
      width = image.width;
      height = image.height;
    }
  }
}
---

{
  image && (
    <Image
      src={image}
      alt={alt}
      width={width}
      height={height}
      loading={loading}
      decoding={decoding}
      class={className}
      format={format}
      style={style}
    />
  )
}
